{% extends '::backend.html.twig' %}

{% block id 'oferta' %}
{% block title %}Modificar la oferta {{ entity }}{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<form action="{{ path('backend_oferta_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="boton" type="submit">Guardar cambios</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('backend_oferta') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <form action="{{ path('backend_oferta_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar oferta</button>
        </form>
    </li>
</ul>
{% endblock %}
